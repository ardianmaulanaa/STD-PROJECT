#include <string>
using namespace std;

// ---------------------------------------------
// CHILD NODE (Achievement) → tipe dasar: string
// ---------------------------------------------
typedef struct AchievementNode* adrAchievement;

struct AchievementNode {
    string achievementName;     // tipe dasar
    adrAchievement next;        // pointer ke achievement berikutnya
};

// ---------------------------------------------
// PARENT NODE (Game) → record lengkap
// ---------------------------------------------
typedef struct Game* adrGame;

struct Game {
    string gameID;              // unik
    string title;               // judul game
    string genre;
    string platform;            // PC, Mobile, Console

    adrAchievement achievementHead;   // POINTER ke list child
    adrGame next;                      // pointer ke parent berikutnya
};

// ---------------------------------------------
// LIST PARENT
// ---------------------------------------------
struct GameList {
    adrGame first;
};

