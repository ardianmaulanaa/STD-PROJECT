Main

#include <iostream>
#include "header_MLL.h"
using namespace std;

int main() {

    ListGame L;
    createListGame(L);

    int opsi;

    welcomePage();

    while (opsi != 0) {
        fiturPage();
        cout << "Pilih opsi: ";
        cin >> opsi;

        if (opsi != 0) {
            executeOpsi(L, opsi);
        }
    }
    closeCMD();
    return 0;
}
